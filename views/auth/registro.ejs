<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <!-- importando configurações HEAD e BootstrapCDN -->
    <%- include('../partials/head') %>
    <!-- importando a font principal -->
    <%- include('../partials/mainFont') %>
    <link rel="stylesheet" text="text/css" href="/css/styles.css" />
    <link rel="stylesheet" text="text/css" href="/css/login.css" />
    <link rel="stylesheet" href="/css/menuHamburguer.css" />
    <link rel="stylesheet" href="/css/medias.css" />
    <title>Registro</title>
  </head>
  <body>
    <!-- importando o header da pasta partials -->
    <%- include('../partials/header') %>
    <section class="fundoR">
      <div class="container">
        <div class="user siginBx">
          <div class="imgBx"><img src="/img/porta.jpg" /></div>
          <div class="formBx">
            <form method="POST">
              <h2>Criar sua conta</h2>
              <input type="text" placeholder="Email" name="email" required />
              <input
                type="password"
                placeholder="Create Password"
                name="create_password"
                required
              />
              <input
                type="password"
                placeholder="Confirm Password"
                name="confirm_password"
                required
              />
              <input type="submit" value="Cadastrar" id="login" />
              <p class="signup">
                Já tem uma conta?
                <a href="/users/login" id="cadastro" onclick="toggleForm()">
                  Entre.</a
                >
              </p>
            </form>
          </div>
        </div>
      </div>
    </section>
  </body>

  <script type="text/javascript" src="/javascripts/login.js"></script>
</html>
